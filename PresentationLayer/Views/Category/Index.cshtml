@model PagedList.IPagedList<EntiyLayers.Category>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Kategoriler";
}



<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
           
            <a href="/Category/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>Kategori Ekle
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Title) <!--Firs deme sebebi PageList eklemiş olmamız.-->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ModifiedUserName)
                </th>
                
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUserName)
                    </td>
                    <td>
                        <a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="/Category/Details/@item.Id" class="btn btn-info btn-sm" title="Detay">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                        <a href="/Category/Delete/@item.Id " class="btn btn-danger btn-sm" title="Sil">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>

                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }))
    </div>

</div>