@using EntiyLayers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="     ">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template </title>
    <!-- Bootstrap Core CSS -->
    <!--Layouta İlgili BootStrapCss Yapıştırdım.-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" /><!--Altına Gir Rootta Ara-->
    <!-- Custom CSS -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet" /><!--Özel Css Dosyam-->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script><!--Altına Gir Rootta Ara-->
    <script src="~/Scripts/bootstrap.min.js"></script><!--Altına Gir Rootta Ara-->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!--LayoutGözükeceklerAyıklama-->
    @{ 
        NoteUser user = null;
        if (Session["login"] !=null)
        {
            user = Session["login"] as NoteUser;
        }
    }

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="Home/Index">Blog Site</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                        <li>
                            <a href="#">
                                <span class="glyphicon glyphicon-wrench"></span>Yönetim
                            </a>
                        </li>
                    }
                    <li>
                        <a href="/Home/MostLiked">
                            <span class="glyphicon glyphicon-heart-empty"></span>En Beğenilenler
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                            <span class="glyphicon glyphicon-th-list"></span>Son Yazılanlar
                        </a>
                    </li>
                    <li>
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-info-sign"></span>Hakkımızda
                        </a>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!--navbar-nav ise listi yan yana yaptı.Sağa dayalı olmasını sağladık-->
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Login">
                                Giriş
                                <span class="glyphicon glyphicon-log-in"></span>
                            </a>
                        </li>

                        <li>
                            <a href="/Home/Register">
                                Üye Ol
                                <span class="glyphicon glyphicon-user"></span>
                            </a>
                        </li>
                    }
                    else {

                    <li>
                        <a href="/Home/ShowProfile">
                            @user.UserName
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Logout">
                            Çıkış
                            <span class="glyphicon glyphicon-log-out"></span>
                        </a>
                    </li>
                    }

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    @RenderBody()
    
    <!--Bölüm Açıyorum her sayfada partial'ı kullanmayacağım için required i false belirledim..'-->
    @RenderSection("footer",required:false)
</body>
</html>
